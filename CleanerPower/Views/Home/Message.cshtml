@model IEnumerable<Message>
@{
    ViewData["Title"] = "List";
      Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center p-4">Mesaj Listesi</h1>
<hr />
<div class="container mt-3">
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Email</th>
                            <th>Mesaj</th>
                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Mesaj</td>
                                
                                <td>
                                    <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete2" asp-route-id="@item.MessageId">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Mesaj Eklenmemiş
                </div>
            }
        </div>
    </div>
</div>

