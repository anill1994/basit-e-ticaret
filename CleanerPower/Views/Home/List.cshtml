@model IEnumerable<Order>
@{
    ViewData["Title"] = "List";
      Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center p-4">Sipariş Listesi</h1>
<hr />
<div class="container mt-3">
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Ad Soyad</th>
                            <th>Ödeme Şekli</th>
                            <th>Telefon</th>
                            <th>Adet</th>
                            <th>İl</th>
                            <th>İlçe</th>
                            <th>Adres</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            
                            <td>@item.OrderId</td>
                            <td>@item.Name</td>
                            <td>@item.Pay</td>
                            <td>@item.Phone</td>
                            <td>@item.Pieces</td>
                            <td>@item.Province</td>
                            <td>@item.District</td>
                            <td>@item.Address</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@item.OrderId">
                                    Sil
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Sipariş Eklenmemiş
                </div>
            }
        </div>
    </div>
    <a class="btn btn-success" asp-controller="Home" asp-action="Excel">Excel İndir</a>
</div>

